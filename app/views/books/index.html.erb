<div class="cover">
  <div class="cover-heading p-5">
    <h1 class="rent" >Rent</h1>
    <h1 class="book" >Books</h1>
  </div>
</div>
<hr>
<div class="container py-5">

  <div class="d-flex align-align-text-center justify-content-between mb-5">
    <h3 class="mb-0">Books to Rent</h3>
    <%= link_to "Add a new book", new_book_path(@book), class:"btn btn-outline-success" %>
  </div>
  <div class="row align-items-center">
    <% @books.each do |book| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3 pt-3">
        <div class="card-category">
          <%= image_tag book.poster_image, class: "book-image" %>
          <br>
          <div class="pt-2">
            <%= link_to book.title, book_path(book), class: "text-decoration-none text-black" %>
            <br>
            <%= book.author %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="socials-box">
    <div class="container">
      <div class="row justify-content-center text-center py-4">
        <h5>Follow Us</h5>
        <p class="mb-0">
          <span class="icons-facebook">
            <i class="mr-1 fab fa-facebook-f">Facebook</i>
          </span>
          <span class="icons-instagram pl-3">
            <i class="mr-1 fab fa-instagram">Instagram</i>
          </span>
        </p>
      </div>
    </div>
  </div>
  <hr>
  <footer>
    <p>Copyright &copy; The AirBnB Books Store</p>
  </footer>
</div>
