<div class="container my-5">
  <%= image_tag @book.poster_image, class: "book-image" %>

  <div>
    <h1 class="book-start-one"><%= @book.title %></h1>
    <h2 class="book-start-two"><%= @book.author %></h2>
    <p class="book-start-three"><%= @book.year %></p>
    <p class="book-start-four">Overview: <%= @book.overview %></p>
    <p class="book-start-five">Genre: <%= @book.genre %></p>
  </div>

  <div class="formstyle">
    <%= simple_form_for [@book, @rental] do |f| %>
      <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker", 'datepicker-dates-value': @existing_rental_dates.to_json } } %>
      <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker", 'datepicker-dates-value': @existing_rental_dates.to_json } } %>
      <%= f.submit "Rent Me!", class: "text-decoration-none btn btn-outline-primary" , onclick: "Congratulations! Your rental was successful!" %>
    <% end %>
  </div>

  <%= link_to 'Back', root_path, class: 'btn btn-dark' %>
</div>
